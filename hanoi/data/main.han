mod iter {
    let symbol_chars = {
        bind caller;
        bind symbol;
        bind offset;
            *symbol #symbol_len *offset #eq if {
                bind caller;
                bind symbol;
                bind offset;
                    @eos caller #curry @exec ^symbol ^offset
            } else {
                bind caller;
                bind symbol;
                bind offset;
                bind next;
                    *symbol *offset next #curry #curry
                    symbol offset #symbol_char_at
                    @yield
                    caller
                    #curry #curry #curry
                    @exec;

                bind caller;
                bind symbol;
                bind offset;
                    caller symbol offset 1 #add 
                    @symbol_chars this #get 
                    #curry #curry #curry 
                    @exec
            }
    };
}

let main = {
    bind next;
        @"h,e\n" 0 @symbol_chars @iter this #get #get #curry #curry
            @parser @csv this #get #get #curry #curry @exec;
    bind cont;
    bind char;
    bind tag;
    bind next;
        tag @fieldchar #assert_eq char 'h' #assert_eq next cont #curry @exec;
    bind cont;
    bind tag;
    bind next;
        tag @nextfield #assert_eq next cont #curry @exec;
    bind cont;
    bind char;
    bind tag;
    bind next;
        tag @fieldchar #assert_eq char 'e' #assert_eq next cont #curry @exec;
    bind cont;
    bind tag;
    bind next;
        tag @nextrow #assert_eq next cont #curry @exec;
    bind tag;
        tag @end #assert_eq
};